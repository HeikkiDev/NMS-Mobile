<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.heikkidev.nomansskymobileapp.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/no_mans_sky_header"
        android:id="@+id/imgHeader" />


    <Button
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:text="Explore now!"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:background="#e91e63"
        android:id="@+id/btnExplore"
        android:textAllCaps="false"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/imgHeader"
        android:layout_alignParentStart="true" />
</RelativeLayout>
